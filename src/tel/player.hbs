<div class='player-video-mask js-click-mask'></div><div class="player-video-loading js-create-loading">  <div class="player-video-loading-image">    <span class="player-video-loading-image-detail"></span>  </div></div><div class='player-video-container js-video-container'>  {{> video option=option}}  {{#if option.video.pic}}    <div class='player-video-poster' style="background-image: url({{option.video.pic}});"></div>  {{/if}}</div><div class=player-video-controller>  <div class='player-video-time'>    <div class='player-video-time-bar js-time-bar'>      <div class='player-video-time-bar-load js-load-bar'></div>      <div class='player-video-time-bar-line js-timeBar-line'>        <span class='player-video-time-bar-thumb js-timeThumb-btn'></span>      </div>    </div>  </div>  <div class="player-video-controller-left clearfix">    <div class="player-video-controller-item">      <button class='btn js-play-btn' data-tip='show' data-tip-txt='播放 k'>        {{{ Icon.Play}}}      </button>    </div>    <div class="player-video-controller-item">      <button class=' btn  js-refresh-btn' data-tip='show' data-tip-txt='重新载入 r'>        {{{ Icon.Refresh}}}      </button>    </div>    <div class="player-video-controller-item ">      <div class="player-video-volume-btn clearfix">        <button class=" btn  js-volume-btn" data-tip='show' data-tip-txt='音量 m'>          {{{ Icon.Volume}}}        </button>        <div class="player-video-volume-bar js-volume-bar">          <div class='player-video-volume-bar-line js-volume-bar-line'>            <div class='player-video-volume-bar-thumb js-thumb-btn'></div>          </div>        </div>      </div>    </div>    <div class='player-video-controller-item player-video-controller-time'>      <span class='player-video-controller-item-time js-starttime'>0:00</span>      /      <span class='player-video-controller-item-time js-endtime'>0:00</span>    </div>  </div>  <div class=player-video-controller-right>    <div class='player-video-controller-item'>      <button class=' btn js-setting-btn' data-tip='show' data-tip-txt='设置'>        {{{ Icon.Seting}}}      </button>      <div class='player-video-setting-container js-setting-panel'>        <p class="player-video-setting-title">播放器选择</p>        <ul class='player-video-setting-panel js-settinghome-panel'>          <li class='player-video-setting-panel-item js-change-html5'>            H5播放器(推荐)          </li>          <li class='player-video-setting-panel-item js-change-flash'>            Flash播放器          </li>        </ul>        <p class="player-video-setting-title">播放速度</p>        <p class="player-video-setting-title">播放方式</p>        <p class="player-video-setting-title">视频比例</p>        <p class="player-video-setting-title">其他设置</p>      </div>    </div>    <div class='player-video-controller-item'>      <button class='btn  js-full-btn' data-tip='show' data-tip-txt='全屏 f'>        {{{ Icon.FullScreen}}}      </button>    </div>  </div></div><div class='player-video-context-panel js-context-panel'></div><div class='player-video-notice js-notice'></div><span class='player-video-loading-icon js-video-loading'>{{{Icon.Loading}}}</span>